<!DOCTYPE html>
<html lang="en" data-layout-mode="orange">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MinistoreFE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/material.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/select2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-datetimepicker.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/plugins/lineawesome/line-awesome.min.css" asp-append-version="true" />
</head>
<body>

    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a asp-page="/Manager/Index" class="logo block">
                    <img src="~/img/logo.png" width="40"
                         height="40" alt asp-append-version="true">
                </a>
            </div>
            <div class="page-title-box">
                <h3>Ministore</h3>
            </div>
            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow main-drop">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img src="~/img/avt.png" alt>
                            <span class="status online"></span>
                        </span>
                        <span>Safe Guard</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-page="/Safeguard/Profile">My Profile</a>
                        <a class="dropdown-item" asp-page="/Logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>

        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul class="sidebar-vertical">
                        <li class="menu-title">
                            <span>Safe Guard</span>
                        </li>
                        @*<li>
                            <a asp-page="/Safeguard/Dashboard">
                                <i class="la"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a asp-page="/Safeguard/LeaveRequest">
                                <i class="la"></i> <span>LeaveRequest</span>
                            </a>
                        </li>*@
                        <li>
                            <a asp-page="/Safeguard/DutySheet">
                                <i class="la"></i> <span>DutySheet</span>
                            </a>
                        </li>
                        <li>
                            <a asp-page="/Safeguard/SalaryReport">
                                <i class="la"></i> <span>Salary Report</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="page-wrapper container">
            <div class="content container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/jquery.slimscroll.min.js" asp-append-version="true"></script>
    <script src="~/js/select2.min.js" asp-append-version="true"></script>
    <script src="~/js/moment.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-datetimepicker.min.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/theme-settings.js" asp-append-version="true"></script>
    <script src="~/js/greedynav.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>