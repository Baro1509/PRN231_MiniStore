@page
@model MinistoreFE.Pages.Manager.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutManager";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Manager</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-page="/Manager/Dashboard">Manager</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-page="/Manager/Products/Index">Product</a>
                </li>
                <li class="breadcrumb-item active">Edit</li>
            </ul>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn btn-secondary" asp-page="./Index">
                <i class="fa fa-list"></i> Back to List
            </a>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn btn-primary" asp-page="./Create">
                <i class="fa fa-plus"></i> Add Product
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="col card-title mb-0">Product Detail</h4>
                <div class="dropdown dropdown-action float-end">
                    <a href="#" class="action-icon dropdown-toggle"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" asp-page="./Details" asp-route-id="@Model.Product.ProductId">
                            Details
                        </a>
                        <a class="dropdown-item" asp-page="./Delete" asp-route-id="@Model.Product.ProductId">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Product.ProductId" />
                    <div class="form-group row">
                        <label asp-for="Product.ProductName" class="col-form-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Product.ProductName" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Product.Description" class="col-form-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Product.Description" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Product.UnitPrice" class="col-form-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Product.UnitPrice" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Product.UnitsInStock" class="col-form-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Product.UnitsInStock" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.UnitsInStock" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Product.CategoryId" class="col-form-label col-md-2"></label>
                        <div class="col-md-10">
                            <select asp-for="Product.CategoryId" class="form-control col-md-10" asp-items="ViewBag.Category"></select>
                        </div>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group-row">
                        <input type="submit" class="btn btn-success" value="Save"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
