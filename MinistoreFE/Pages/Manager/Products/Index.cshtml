@page
@model MinistoreFE.Pages.Manager.Products.IndexModel

@{
	ViewData["Title"] = "Product List";
	Layout = "_LayoutManager";
}

<div class="page-header">
	<div class="row align-items-center">
		<div class="col">
			<h3 class="page-title">Manager</h3>
			<ul class="breadcrumb">
				<li class="breadcrumb-item">
					<a asp-page="/Manager/Staff/Index">Manager</a>
				</li>
				<li class="breadcrumb-item active">Products</li>
			</ul>
		</div>
		<div class="col-auto float-end ms-auto">
			<a class="btn btn-primary" asp-page="./Create">
				<i class="fa fa-plus"></i> Add Product
			</a>
		</div>
	</div>
</div>

<div class="row filter-row">
	<div class="col-sm-6 col-md-9">
		<div class="form-group form-focus">
			<input type="text" class="form-control floating">
			<label class="focus-label">Product Name</label>
		</div>
	</div>
	<div class="col-sm-6 col-md-3">
		<div class="d-grid">
			<a href="#" class="btn btn-success w-100"> Search </a>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped custom-table datatable">
				<thead>
					<tr>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].ProductName)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].Description)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].UnitPrice)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].UnitsInStock)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].ProductStatus)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].Status)
						</th>
						<th class="text-center">
							@Html.DisplayNameFor(model => model.Product[0].Category)
						</th>
						<th class="text-center">
							Action
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Product)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.ProductName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Description)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.UnitPrice)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.UnitsInStock)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ProductStatus)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Category.CategoryName)
							</td>
							<td>
								<div class="d-flex justify-content-between gap-3">
									<a asp-page="./Details" asp-route-id="@item.ProductId">
										Details
									</a>
									<a asp-page="./Edit" asp-route-id="@item.ProductId">
										Edit
									</a>
									<a asp-page="./Delete" asp-route-id="@item.ProductId">
										Delete
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
</div>

