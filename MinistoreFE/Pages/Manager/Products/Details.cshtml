@page
@model MinistoreFE.Pages.Manager.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutManager";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Manager</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-page="/Manager/Staff/Index">Manager</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-page="./Index">Product</a>
                </li>
                <li class="breadcrumb-item active">Details</li>
            </ul>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn btn-secondary" asp-page="./Index">
                <i class="fa fa-list"></i> Back to List
            </a>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn btn-primary" asp-page="./Create">
                <i class="fa fa-plus"></i> Add Product
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="col card-title mb-0">Product Detail</h4>
                <div class="dropdown dropdown-action float-end">
                    <a href="#" class="action-icon dropdown-toggle"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" asp-page="./Edit" asp-route-id="@Model.Product.ProductId">
                            Edit
                        </a>
                        <a class="dropdown-item" asp-page="./Delete" asp-route-id="@Model.Product.ProductId">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Product Name</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" readonly="true" value="@Model.Product.ProductName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Description</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" readonly="true" value="@Model.Product.Description">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Unit Price</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" readonly="true" value="@Model.Product.UnitPrice VND">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Unit In Stock</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" readonly="true" value="@Model.Product.UnitsInStock">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Category</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" readonly="true" value="@Model.Product.Category.CategoryName">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
