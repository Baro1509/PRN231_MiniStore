                    <a asp-page="/Salesman/Products/Index">Product</a>
                </li>
                <li class="breadcrumb-item active">
                    Details
                </li>
            </ul>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn add-btn" asp-page="/Salesman/Products/Index">
                <i class="fa fa-list"></i> Back to List
            </a>
        </div>
        <div class="col-auto float-end ms-auto">
            <a class="btn add-btn" asp-page="/Salesman/Checkout">
                <i class="fa fa-cart-shopping"></i> Checkout
            </a>
        </div>
    </div>
</div>

